  {{t.Name}}:
    Type: AWS::DynamoDB::Table
    Properties:
      AttributeDefinitions:
        - AttributeName: 'PK'
          AttributeType: 'S'
        - AttributeName: 'SK'
          AttributeType: 'S'
      KeySchema:
        - AttributeName: 'PK'
          KeyType: 'HASH'
        - AttributeName: 'SK'
          KeyType: 'RANGE'
      BillingMode: PAY_PER_REQUEST
      SSESpecification:
        SSEEnabled: true
{% if t.IsStreamEnabled -%}
      StreamSpecification:
        StreamViewType: NEW_IMAGE
{% endif -%}